# LLM API Configuration (Gemini API)
LLM_API_URL=https://generativelanguage.googleapis.com/v1beta/models/gemini-2.5-pro:generateContent
LLM_API_KEY=your_api_key_here
LLM_MODEL=gemini-2.5-pro
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=4000

# Translation Validation Configuration
# Stronger model for validation tasks (supports file upload)
VALIDATION_MODEL=gemini-2.0-flash-exp

# Translation Configuration
MAX_RETRIES=3
REQUEST_TIMEOUT=60000
BATCH_SIZE=50
BACKUP_ENABLED=true

# Paths
LOCALES_DIR=./locales
REFERENCE_FILE=en_US.json
BACKUP_DIR=./backups
LOGS_DIR=./logs

# Debug
DEBUG=false
VERBOSE=false
DRY_RUN=false